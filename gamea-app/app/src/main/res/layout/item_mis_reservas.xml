<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_between_buttons"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_inmueble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp">


                    <TextView
                        android:id="@+id/lbl_nombre_cancha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STADIUM"
                        android:textColor="@color/colorTextBlack"
                        android:textStyle="bold" />


                    <!--inicio fecha -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/lbl_fecha_titulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Fecha:"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbl_fecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="2019-12-12"
                            android:textColor="@color/colorTextBlack" />

                    </LinearLayout>
                    <!-- fin fecha -->


                    <!--inicio hora_inicio -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/lbl_hora_inicio_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Hora inicio:"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/lbl_hora_inicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="08:00"
                            android:textColor="@color/colorTextBlack" />

                    </LinearLayout>

                    <!--fin hora inicio -->

                    <!--inicio hora_fin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/lbl_hora_fin_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Hora fin:"
                            android:textColor="@color/colorTextBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lbl_hora_fin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="09:00"
                            android:textColor="@color/colorTextBlack" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="8dp"
                android:clickable="true"
                android:background="@drawable/delete_forever"
                android:layout_height="wrap_content"
                />

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
