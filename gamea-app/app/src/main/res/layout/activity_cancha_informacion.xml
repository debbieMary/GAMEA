                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_banhio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin de baños -->

                <!-- Camerinos-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_label_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_camerinos_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camerinos:"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_camerinos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin de camerinos-->



                <!-- Horarios de acceso libre-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_label_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_horarios_acceso_libre_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horarios de acceso libre:"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_horarios_acceso_libre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin de horarios acceso libre -->


                <!-- Realizado por -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_label_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_realizado_por_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Realizado por:"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_realizado_por"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin de realizado por -->

                <!-- Estado-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_label_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_estado_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado:"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin estado -->


                <!-- Distrito -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_label_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_distrito_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distrito:"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_distrito"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>
                </LinearLayout>
                <!-- -Fin de distrito-->

                <Button
                    android:id="@+id/btn_ver_horarios_disponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver horarios disponibles" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>