<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/orangeTrans"
        android:background="@drawable/card_border"
        app:cardElevation="5dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp"
            android:paddingLeft="4dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:padding="3dp"
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="Remitente"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txv_remitente_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:paddingLeft="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Fec. Derivacion" />

                <TextView
                    android:id="@+id/txv_fecha_derivada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Destinatario" />

                <TextView
                    android:id="@+id/txv_destinatario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Fec. Recepcion" />

                <TextView
                    android:id="@+id/txv_fecha_recivida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Instruccion" />

                <TextView
                    android:id="@+id/txv_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView63"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Estado" />

                <TextView
                    android:id="@+id/txv_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlackTrasnparent"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_weight="3"
                    android:text="Observaciones" />

                <TextView
                    android:id="@+id/txv_observaciones_r"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>